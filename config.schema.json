{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WOL-SSH Switch 설정",
  "type": "object",
  "properties": {
    "platform": {
      "type": "string",
      "const": "WolSshPlatform",
      "description": "플랫폼 식별자"
    },
    "name": {
      "type": "string",
      "description": "스위치 이름"
    },
    "domain": {
      "type": "string",
      "format": "uri",
      "description": "WOL 로그인 URL (예: http://192.168.0.10)"
    },
    "username": {
      "type": "string",
      "description": "로그인 계정"
    },
    "password": {
      "type": "string",
      "description": "로그인 비밀번호"
    },
    "targetName": {
      "type": "string",
      "description": "Wake On LAN 대상 이름"
    }
  },
  "required": ["platform","name","domain","username","password","targetName"]
}
